---
import { NavBar } from '../NavBar';
import type { CollectionEntry } from 'astro:content';

interface Props {
  id: number;
  quotes: CollectionEntry<'quotes'>[];
}

// `post` will match your 'blog' collection schema type
const { quotes, id } = Astro.props;

const quoteMeta = quotes.map(function ({ data }) {
  const { id, quotee, platform, link } = data;

  return { id, quotee, platform, link };
});
---

<NavBar id={id} quoteMeta={quoteMeta} client:only="react" />
